{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "skipLibCheck": true,
    "exactOptionalPropertyTypes": true,
    "declaration": true,
    "types": ["node"],
    "outDir": "lib",
    "removeComments": true,
    "verbatimModuleSyntax": true
  },
  "include": ["src/**/*.ts"]
}
